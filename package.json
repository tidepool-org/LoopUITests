{
  "name": "loop-ui-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test_e2e": "source ./scripts/test.sh $BUILD_DIR $CONFIG $NAME",
    "build_loop": "source ./scripts/build_loop.sh $BUILD_TAG",
    "lint": "eslint 'src/**'"
  },
  "devDependencies": {
    "eslint": "7.18.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "jest": "25.5.4",
    "jest-html-reporters": "2.1.0",
    "jest-junit": "10.0.0",
    "detox-recorder": "1.0.151"
  },
  "detox": {
    "artifacts": {
      "plugins": {
        "uiHierarchy": "enabled",
        "screenshot": {
          "enabled": false
        }
      }
    },
    "configurations": {
      "ios.sim.debug.iphone-12pro": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 12 Pro",
          "os": "iOS 14.5"
        }
      },
      "ios.sim.debug.iphone-se-2": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone SE (2nd generation)",
          "os": "iOS 14.5"
        }
      }
    },
    "test-runner": "jest"
  },
  "dependencies": {
    "detox": "18.15.0"
  }
}
