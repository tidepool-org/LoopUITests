{
  "name": "LoopUITests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test_all": "detox test -c ios.sim.debug",
    "test_error": "detox test e2e/error_1 -c ios.sim.debug.iphone-11pro",
    "test_smoke_1": "detox test e2e/smoke_1 -c ios.sim.debug.iphone-11pro",
    "test_smoke_1_iphone6": "detox test e2e/smoke_1 -c ios.sim.debug.iphone-6",
    "test_smoke_1_iphoneSE2": "detox test e2e/smoke_1 -c ios.sim.debug.iphone-se-2",
    "test_smoke_2": "detox test e2e/smoke_2 -c ios.sim.debug.iphone-11pro",
    "test_smoke_2_iphone6": "detox test e2e/smoke_1 -c ios.sim.debug.iphone-6",
    "test_smoke_2_iphoneSE2": "detox test e2e/smoke_1 -c ios.sim.debug.iphone-se-2",
    "test_functional_1": "detox test e2e/functional_1 -c ios.sim.debug.iphone-11pro",
    "test_functional_2": "detox test e2e/functional_2 -c ios.sim.debug.iphone-11pro",
    "test_guardrail_1": "detox test e2e/guardrails_1 -c ios.sim.debug.iphone-11pro",
    "test_guardrail_2": "detox test e2e/guardrails_2 -c ios.sim.debug.iphone-11pro",
    "build": "detox build -c ios.sim.debug.iphone-11pro",
    "lint": "eslint ."
  },
  "devDependencies": {
    "detox": "^16.9.2",
    "jest": "^25.5.4",
    "jest-junit": "^10.0.0"
  },
  "detox": {
    "artifacts": {
      "plugins": {
        "screenshot": {
          "enabled": true,
          "shouldTakeAutomaticSnapshots": true,
          "keepOnlyFailedTestsArtifacts": true,
          "takeWhen": {
            "testStart": true,
            "testDone": true,
            "appNotReady": true
          }
        }
      }
    },
    "configurations": {
      "ios.sim.debug.iphone-11pro": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      },
      "ios.sim.debug.iphone-6": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 6"
        }
      },
      "ios.sim.debug.iphone-se-2": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone SE (2nd generation)"
        }
      }
    },
    "test-runner": "jest"
  }
}
