{
  "name": "loop-ui-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test_e2e": "source ./scripts/test.sh $BUILD_DIR $CONFIG $NAME",
    "build_loop": "source ./scripts/build_loop.sh $BUILD_TAG",
    "lint": "eslint 'src/**'"
  },
  "devDependencies": {
    "detox-recorder": "1.0.151",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "jest": "26.6.3",
  },
  "detox": {
    "artifacts": {
      "plugins": {
        "uiHierarchy": "enabled",
        "screenshot": {
          "enabled": true,
          "shouldTakeAutomaticSnapshots": true,
          "keepOnlyFailedTestsArtifacts": true,
          "takeWhen": {
            "testStart": true,
            "testDone": true,
            "appNotReady": true
          }
        }
      }
    },
    "configurations": {
      "ios.sim.debug.iphone-11pro": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro",
          "os": "iOS 13.7"
        }
      },
      "ios.sim.debug.iphone-11pro-ios14": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro",
          "os": "iOS 14.1"
        }
      },
      "ios.sim.debug.iphone-se-2": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone SE (2nd generation)",
          "os": "iOS 13.7"
        }
      },
      "ios.sim.debug.iphone-se-2-ios14": {
        "binaryPath": "build/Build/Products/Debug-iphonesimulator/Loop.app",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone SE (2nd generation)",
          "os": "iOS 14.1"
        }
      }
    },
    "test-runner": "jest"
  },
  "dependencies": {
    "detox": "16.9.2"
  }
}
