{
  "name": "LoopUITests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "e2e:test": "detox test e2e/smoke_test -c ios.sim.release",
    "scenarios:test": "detox test e2e/scenario_test -c ios.sim.release",
    "build": "detox build -c ios.sim.release",
    "e2e:ci": "npm run build && npm run e2e:test -- --cleanup",
    "scenarios:ci": "npm run build && npm run scenarios:test -- --cleanup",
    "lint": "eslint ."
  },
  "devDependencies": {
    "detox": "^14.8.5",
    "jest": "^24.9.0"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh Debug dev debug_build_log.txt",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      },
      "ios.sim.release":{
        "binaryPath": "build/Release-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh Release dev release_build_log.txt",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      }
    },
    "test-runner": "jest"
  }
}
