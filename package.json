{
  "name": "LoopUITests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "all-test": "detox test -c ios.sim.debug",
    "smoke-test": "detox test e2e/smoke -c ios.sim.debug",
    "functional-test": "detox test e2e/functional -c ios.sim.debug",
    "guardrails-test": "detox test e2e/guardrails -c ios.sim.debug",
    "build": "detox build -c ios.sim.debug",
    "lint": "eslint ."
  },
  "devDependencies": {
    "detox": "^16.8.1",
    "jest": "^25.5.4",
    "jest-junit": "^10.0.0"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh dev",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        },
        "artifacts": {
          "plugins": {
            "screenshot": {
              "enabled": true,
              "shouldTakeAutomaticSnapshots": true,
              "keepOnlyFailedTestsArtifacts": true,
              "takeWhen": {
                "testStart": true,
                "testDone": true,
                "appNotReady": true
              }
            }
          }
        }
      }
    },
    "test-runner": "jest"
  }
}
