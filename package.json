{
  "name": "LoopUITests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "start-test": "detox test e2e/start -c ios.sim.debug 2>&1 | tee ./artifacts/start_test_output.txt",
    "all-test": "detox test -c ios.sim.debug 2>&1 | tee ./artifacts/all_test_output.txt",
    "smoke-test": "detox test e2e/smoke -c ios.sim.debug 2>&1 | tee ./artifacts/smoke_test_output.txt",
    "functional-test": "detox test e2e/functional -c ios.sim.debug 2>&1 | tee ./artifacts/functional_test_output.txt",
    "build": "detox build -c ios.sim.debug",
    "lint": "eslint ."
  },
  "devDependencies": {
    "detox": "^16.7.2",
    "jest": "^25.5.4"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh dev",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      }
    },
    "test-runner": "jest"
  }
}
