{
  "name": "LoopUITests",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "quick-test": "detox test e2e/quick -c ios.sim.debug",
    "all-test": "detox test -c ios.sim.debug 2>&1 | tee ./artifacts/all_test_output.txt",
    "smoke-test": "detox test e2e/smoke -c ios.sim.debug",
    "functional-test": "detox test e2e/functional -c ios.sim.debug 2>&1 | tee ./artifacts/functional_test_output.txt",
    "build": "detox build -c ios.sim.debug",
    "lint": "eslint ."
  },
  "devDependencies": {
    "detox": "^16.7.2",
    "jest": "^25.5.4",
    "jest-junit": "^10.0.0"
  },
  "detox": {
    "artifacts": {
      "plugins": {
        "screenshot": {
          "enabled": true,
          "shouldTakeAutomaticSnapshots": true,
          "keepOnlyFailedTestsArtifacts": true,
          "takeWhen": {
            "testStart": true,
            "testDone": true,
            "appNotReady": true
          }
        },
        "instruments": {
          "enabled": false
        },
        "log": {
          "enabled": false
        }
      }
    },
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.dev.sh dev",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      }
    },
    "test-runner": "jest"
  }
}
